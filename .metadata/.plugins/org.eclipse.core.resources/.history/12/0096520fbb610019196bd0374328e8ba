	public GOFT28 CreateUser(String EName, String EEmail)throws InterruptedException{
		Iconclick.click();
		//scrollPageDown(driver);
        JavascriptExecutor js = (JavascriptExecutor) driver;
        js.executeScript("arguments[0].scrollIntoView();", Setting);
        Setting.click();
		//
		
		
		ClickPlus.click();
		ClickUser.click();
		Thread.sleep(2000);
		ClickCreate.click();
		EnterName.sendKeys(EName);
		EnterEmail.sendKeys(EEmail);
		AllowedCmp.click();
		
		List<WebElement> list = driver.findElements(By.xpath("//li[@id='ui-id-208']//a[contains(text(),'Techno Park')]//a"));
		System.out.println(list.size());	
		for(WebElement element:list){	
			System.out.println("Values" + element.getAttribute("innerHTML"));
			String innnerhtml=element.getAttribute("innerHTML");
			if (element.getAttribute("innerHTML").contains("Techno Park)"))
			{			
			element.click();
			break;	
			}		
			System.out.println("Selected Storeowner is ====== "+innnerhtml);	
			}
		UserClick.click();
		clickcheck.click();
		Uncheck.click();
		Uncheck1.click();
		Uncheck2.click();
		
		return new GOFT28();
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
